<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".activities.SplashActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_marginBottom="50dp"
        android:tint="@android:color/white"
        android:src="@drawable/splash" />

    <EditText
        android:id="@+id/loginUsernameInput"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="@string/loginUsernameField"
        android:inputType="textEmailAddress"
        android:textColor="@android:color/white"
        android:textColorHint="@color/fontHint" />

    <EditText
        android:id="@+id/loginPasswordInput"
        android:layout_width="238dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@android:color/white"
        android:ems="10"
        android:hint="@string/loginPasswordField"
        android:textColorHint="@color/fontHint"
        android:inputType="textPassword"
        android:textColor="@android:color/white" />

    <Button
        android:layout_marginTop="39dp"
        android:id="@+id/loginButton"
        android:layout_width="141dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_button_outline"
        android:text="@string/loginButton"
        android:textColor="@android:color/white"
        android:textSize="20sp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:gravity="center"
        android:text="@string/loginDividerLabel"
        android:textColor="@android:color/white"
        android:textSize="14sp" />

    <Button
        android:id="@+id/loginSignUpButton"
        android:layout_width="111dp"
        android:layout_height="34dp"
        android:background="@drawable/rounded_button_outline"
        android:text="@string/loginSignUpButton"
        android:textColor="@android:color/white"
        android:textSize="15sp" />

</LinearLayout>