<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="8dp"
    android:elevation="24dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <ImageView
            android:id="@+id/hillfortRecycleItemImageIcon"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginEnd="16dp"
            tools:srcCompat="@tools:sample/avatars" />

        <TextView
            android:id="@+id/hillfortRecycleItemName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"
            android:text="HEEEE"
            android:textSize="30sp" />

        <TextView
            android:id="@+id/hillfortRecycleItemLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortRecycleItemName"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"
            android:text="HOOOO" />

        <TextView
            android:id="@+id/hillfortRecycleItemVisited"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortRecycleItemLocation"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon"
            android:text="FIFO" />

        <RatingBar
            android:id="@+id/hillfortRecycleItemRating"
            style="@style/Widget.AppCompat.RatingBar.Small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/hillfortRecycleItemVisited"
            android:layout_toEndOf="@+id/hillfortRecycleItemImageIcon" />

        <ImageView
            android:id="@+id/hillfortRecycleItemFavouriteIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginTop="35dp"
            android:tint="#ff74d8"
            />
    </RelativeLayout>
</androidx.cardview.widget.CardView>